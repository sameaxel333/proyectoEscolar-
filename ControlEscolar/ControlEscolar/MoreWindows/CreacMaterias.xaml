    <Window x:Class="ControlEscolar.MoreWindows.CreacMaterias"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlEscolar.MoreWindows"
         xmlns:customcontrols ="clr-namespace:ControlEscolar.CustomControls"
         xmlns:ViewModel ="clr-namespace:ControlEscolar.ViewModel"
        mc:Ignorable="d"
        Title="CreacMaterias" Height="450" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

        <Window.DataContext>
            <ViewModel:LoginViewModel/>
        </Window.DataContext>

        <Window.Resources>
            <Style TargetType="Hyperlink">
                <Setter Property="Foreground" Value="LightCyan"/>
                <Setter Property="TextDecorations" Value="{x:Null}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="TextDecorations" Value="Underline"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <BooleanToVisibilityConverter x:Key="BooleanToVisivility"/>
        </Window.Resources>

        <Window.Visibility>
            <Binding Path="IsViewVisible" Mode='TwoWay'
              Converter="{StaticResource BooleanToVisivility}"/>
        </Window.Visibility>

        <Border CornerRadius="12">

            <Border CornerRadius="10" BorderThickness="2" Opacity="0.98" Margin="0,1,0,-1">
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#462AD8" Offset="0"/>
                        <GradientStop Color="#DA34AE" Offset="0.75"/>
                        <GradientStop Color="#8A16C1" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0.1,0" EndPoint="1,1">
                        <GradientStop Color="#060521" Offset="0"/>
                        <GradientStop Color="LightBlue" Offset="0.75"/>
                        <GradientStop Color="#060521" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30">
                        </RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="44,0,0,-230">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnMinimizar"
                     BorderThickness="0"
                     Content="-"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Monserrat"
                     Cursor="Hand"
                     Grid.Column="1"
                     Click="btnMinimizar_Click" Margin="0,0,0,222">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#28AEED"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#278BEF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="18" Height="18" CornerRadius="9"
                                     Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                    </Border>

                                </ControlTemplate>
                            </Button.Template>
                        </Button>


                        <StackPanel HorizontalAlignment="Left"
                                Margin="77,130,0,0" Width="137" Height="112" VerticalAlignment="Top">

                            <TextBlock                 Text="Horario"
                        Foreground="LightGray"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        FontSize="15"
                        Height="33"/>
                            <ComboBox x:Name="comboHorario" Width="131" Height="19" RenderTransformOrigin="0.5,0.5">

                                <ComboBoxItem Content="08:00 AM" />
                                <ComboBoxItem Content="09:00 AM" />
                                <ComboBoxItem Content="10:00 AM" />
                                <ComboBoxItem Content="11:00 AM" />
                                <ComboBoxItem Content="12:00 PM" />
                                <ComboBoxItem Content="01:00 PM" />
                                <ComboBoxItem Content="02:00 PM" />
                                <ComboBoxItem Content="03:00 PM" />
                                <ComboBoxItem Content="04:00 PM" />
                                <ComboBoxItem Content="05:00 PM" />

                            </ComboBox>
                        </StackPanel>


                        <Button x:Name="btnCerrar"
                     BorderThickness="0"
                     Content="x"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Monserrat"
                     Cursor="Hand"
                     Grid.Column="2"
                     Click="btnCerrar_Click" Grid.ColumnSpan="2" Margin="2,0,2,222">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Red"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#278BEF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="18" Height="18" CornerRadius="9"
                         Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                      HorizontalAlignment="Center"/>
                                    </Border>

                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>

                    <StackPanel
                         Orientation="Vertical"
                         Margin="96,0,263,-355">

                        <TextBlock Text="Creacion de Materias "
                            Foreground="White"
                            FontSize="19"
                            FontWeight="Medium"
                            FontFamily="Montserrat" Height="83"
                            Margin="0,50,0,0" Width="204"
                            />
                        <TextBlock
                            Foreground="LightGray"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            FontSize="15"
                            Height="20"/>

                        <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="Red"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0 0 0 0"
                               TextWrapping="Wrap" Height="4" RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleY="-1"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <Button x:Name="btnLogin"
                         Command="{Binding LoginCommand}"
                         BorderThickness="0"
                         Content="Crear Materia"
                         Foreground="DarkGray"
                         FontSize="14"
                         FontFamily="Montserrat"
                         Cursor="Hand"
                         Click="btnLogin_Click"
                            Margin="0,60,0,0" Height="56" Width="178">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="#462AD8"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#28AEED"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Width="150" Height="40" CornerRadius="20"
                                 Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <TextBlock Text="{Binding ErrorMessage}"
                         Foreground="Red"
                         FontSize="12"
                         FontWeight="Medium"
                         FontFamily="Montserrat"
                         Margin="0 10 0 0"
                         TextWrapping="Wrap"/>

                    </StackPanel>
                    <StackPanel
                    Orientation="Vertical"
                    Margin="486,44,10,-328">
                        <TextBlock Foreground="LightCyan"
                           FontSize="14"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           TextWrapping="Wrap"
                           TextAlignment="Right"
                           Height="33" Width="285">
                    <Hyperlink Click="Inicio_Click">Inicio</Hyperlink>
                    <Run Text="    " />
                    <Hyperlink Click="Pagos_Click">Pagos</Hyperlink>
                    <Run Text="    " />
                    <Run Text="Kárdex" />
                    <Run Text="    " />
                    <Run Text="Configuración" />
                        </TextBlock>
                        <Image Source="/Images/UAZlogo.png"
                        Width="170"
                        Height="212"
                           Margin="100,0,0,0"
                           />
                    </StackPanel>
                    <StackPanel
                    Orientation="Vertical"
                    Margin="274,129,382,-162">
                        <TextBlock Text="Nombre"
                        Foreground="LightGray"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        FontSize="15"
                        Height="20"/>
                        <TextBox x:Name="txtUser1"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                        FontFamily="Montserrat"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="White"
                        CaretBrush="LightGray"
                        BorderBrush="DarkGray"
                        BorderThickness="0,0,0,2"
                        Height="24"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="0,5,0,0"
                        Padding="20,0,0,0" Width="124" TextChanged="txtUser1_TextChanged">
                            <TextBox.Background>
                                <ImageBrush 
                                Stretch="None"
                                AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>

                    </StackPanel>





                    <StackPanel
                    Orientation="Vertical"
                    Margin="414,129,263,-148">
                        <TextBlock Text="Cupo Maximo "
                        Foreground="LightGray"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        FontSize="15"
                        Height="21"/>
                        <TextBox x:Name="txtUser4"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                        FontFamily="Montserrat"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="White"
                        CaretBrush="LightGray"
                        BorderBrush="DarkGray"
                        BorderThickness="0,0,0,2"
                        Height="23"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="0,5,0,0"
                        Padding="20,0,0,0" Width="124" TextChanged="txtUser1_TextChanged">
                            <TextBox.Background>
                                <ImageBrush 
                                Stretch="None"
                                AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>


                    </StackPanel>




                    <StackPanel
                    Orientation="Vertical"
                    Margin="96,109,574,-162"/>












                    <StackPanel
                    
                    
                 
    Orientation="Vertical"
    Margin="44,385,44,-391">


                        <TextBlock 
        Background="White" RenderTransformOrigin="0.5,-4.057" Height="3"
        Margin="0,0,0,10"/>
                        <TextBlock Text="Contacto            Ubicación            Ayuda            Nuestra Institución            C 2025"
        Foreground="LightCyan"
        FontSize="16"
        FontWeight="Medium"
        FontFamily="Montserrat"
        TextWrapping="Wrap"
        TextAlignment="Center"
        Margin="0,5,0,50" Height="39" Width="709"/>


                    </StackPanel>
                    <StackPanel
                    Orientation="Vertical"
                    Margin="108,129,562,-162"/>

                </Grid>

            </Border>

        </Border>









    </Window>

