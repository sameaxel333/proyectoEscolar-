<Window x:Class="ControlEscolar.MoreWindows.RegistrationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlEscolar.MoreWindows"
         xmlns:customcontrols ="clr-namespace:ControlEscolar.CustomControls"
         xmlns:ViewModel ="clr-namespace:ControlEscolar.ViewModel"
        mc:Ignorable="d"
        Title="RegistrationView" Height="450" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Window.DataContext>
        <ViewModel:LoginViewModel/>
    </Window.DataContext>

    <Window.Resources>
            <Style TargetType="Hyperlink">
                <Setter Property="Foreground" Value="LightCyan"/>
                <Setter Property="TextDecorations" Value="{x:Null}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="TextDecorations" Value="Underline"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        <BooleanToVisibilityConverter x:Key="BooleanToVisivility"/>
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode='TwoWay'
              Converter="{StaticResource BooleanToVisivility}"/>
    </Window.Visibility>

    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/imagen.png" Stretch="None"/>
        </Border.Background>
        <Border CornerRadius="10" BorderThickness="2" Opacity="0.98">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="1,1">
                    <GradientStop Color="#060521" Offset="0"/>
                    <GradientStop Color="LightBlue" Offset="0.75"/>
                    <GradientStop Color="#060521" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30">
                    </RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnMinimizar"
                     BorderThickness="0"
                     Content="-"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Monserrat"
                     Cursor="Hand"
                     Grid.Column="1"
                     Click="btnMinimizar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                                     Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                </Border>

                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnCerrar"
                     BorderThickness="0"
                     Content="x"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Monserrat"
                     Cursor="Hand"
                     Grid.Column="2"
                     Click="btnCerrar_Click" Grid.ColumnSpan="2" Margin="2,0,2,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Red"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                         Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                      HorizontalAlignment="Center"/>
                                </Border>

                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>

                <StackPanel
                         Orientation="Vertical"
                         Margin="96,40,435,-402">

                    <TextBlock Text="Inscripciones"
                            Foreground="White"
                            FontSize="19"
                            FontWeight="Medium"
                            FontFamily="Montserrat" Height="38"
                            Margin="0,10,0,0"
                            />
                    <TextBlock Text="Nombre"
                            Foreground="LightGray"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            FontSize="15"
                            Height="23"/>
                    <TextBox x:Name="txtUser"
                          Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                          FontFamily="Montserrat"
                          FontSize="13"
                          FontWeight="Medium"
                          Foreground="White"
                          CaretBrush="LightGray"
                          BorderBrush="DarkGray"
                          BorderThickness="0,0,0,2"
                          Height="28"
                          VerticalContentAlignment="Center"
                          HorizontalAlignment="Left"
                          Margin="0,5,0,0"
                          Padding="20,0,0,0" Width="125">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user-icon.png"
                                     Stretch="None"
                                     AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>
                    <TextBlock Text="Curp"
                            Foreground="LightGray"
                            FontSize="15"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            Margin="0,15,0,0"/>
                    <customcontrols:BindablePasswordBox
                     Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Height="46" Loaded="BindablePasswordBox_Loaded" 
                     />
                    <TextBlock Text="Dirección"
                         Foreground="LightGray"
                         FontSize="15"
                         FontWeight="Medium"
                         FontFamily="Montserrat"
                         Margin="0,10,0,0"
                         />

                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="Red"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0 0 0 0"
                               TextWrapping="Wrap" Height="4" RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="-1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <customcontrols:BindablePasswordBox
                              Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                              Height="46" Loaded="BindablePasswordBox_Loaded" 
                              />
                    <Button x:Name="btnLogin"
                         Command="{Binding LoginCommand}"
                         BorderThickness="0"
                         Content="Enviar Solicitud"
                         Foreground="DarkGray"
                         FontSize="14"
                         FontFamily="Montserrat"
                         Cursor="Hand"
                         Click="btnLogin_Click"
                            Margin="0,16,0,0">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#462AD8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="150" Height="40" CornerRadius="20"
                                 Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <TextBlock Text="{Binding ErrorMessage}"
                         Foreground="Red"
                         FontSize="12"
                         FontWeight="Medium"
                         FontFamily="Montserrat"
                         Margin="0 10 0 0"
                         TextWrapping="Wrap"/>

                </StackPanel>
                <StackPanel
                    Orientation="Vertical"
                    Margin="486,44,10,-328">
                    <TextBlock Foreground="LightCyan"
                           FontSize="14"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           TextWrapping="Wrap"
                           TextAlignment="Right"
                           Height="33" Width="278">
                    <Hyperlink Click="Inicio_Click">Inicio</Hyperlink>
                    <Run Text="    " />
                    <Hyperlink Click="Pagos_Click">Pagos</Hyperlink>
                    <Run Text="    " />
                    <Run Text="Kárdex" />
                    <Run Text="    " />
                    <Run Text="Configuración" />
                                    </TextBlock>

                    <Image Source="/Images/UAZlogo.png"
                        Width="217"
                        Height="303"/>
                </StackPanel>
                <StackPanel
                    Orientation="Vertical"
                    Margin="238,88,410,-134">

                   
                    <TextBlock Text="Apellido"
                        Foreground="LightGray"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        FontSize="15"
                        Height="23"/>
                    <TextBox x:Name="txtUser1"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                        FontFamily="Montserrat"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="White"
                        CaretBrush="LightGray"
                        BorderBrush="DarkGray"
                        BorderThickness="0,0,0,2"
                        Height="28"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="0,5,0,0"
                        Padding="20,0,0,0" Width="124">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user-icon.png"
                                Stretch="None"
                                AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>
                    
                </StackPanel>
                <StackPanel
    Orientation="Vertical"
    Margin="44,385,44,-391">
              
                   
                    <TextBlock 
        Background="White" RenderTransformOrigin="0.5,-4.057" Height="3"
        Margin="0,0,0,10"/>
                    <TextBlock Text="Contacto            Ubicación            Ayuda            Nuestra Institución            C 2025"
        Foreground="LightCyan"
        FontSize="16"
        FontWeight="Medium"
        FontFamily="Montserrat"
        TextWrapping="Wrap"
        TextAlignment="Center"
        Margin="0,5,0,50" Height="39" Width="709"/>


                </StackPanel>

            </Grid>

        </Border>

    </Border>
</Window>
