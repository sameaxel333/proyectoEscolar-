<Window x:Class="ControlEscolar.View.SignUpView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlEscolar.View"
         xmlns:customcontrols ="clr-namespace:ControlEscolar.CustomControls"
         xmlns:ViewModel ="clr-namespace:ControlEscolar.ViewModel"
        mc:Ignorable="d"
        Title="SignUpView" Height="450" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Window.Resources>
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="LightCyan"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode='TwoWay'
              Converter="{StaticResource BooleanToVisibility}"/>
    </Window.Visibility>

    <Border CornerRadius="12">

        <Border CornerRadius="10" BorderThickness="2" Opacity="0.98" Margin="0,1,0,-1">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="1,1">
                    <GradientStop Color="#060521" Offset="0"/>
                    <GradientStop Color="LightBlue" Offset="0.75"/>
                    <GradientStop Color="#060521" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30">
                    </RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnMinimizar"
                     BorderThickness="0"
                     Content="-"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Monserrat"
                     Cursor="Hand"
                     Grid.Column="1"
                     Click="btnMinimizar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                                     Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                </Border>

                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnCerrar"
                     BorderThickness="0"
                     Content="x"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Monserrat"
                     Cursor="Hand"
                     Grid.Column="2"
                     Click="btnCerrar_Click" Grid.ColumnSpan="2" Margin="2,0,2,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Red"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                         Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                      HorizontalAlignment="Center"/>
                                </Border>

                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>

                <StackPanel
                         Orientation="Vertical"
                         Margin="96,0,263,-355">

                    <TextBlock Text="Sign Up"
                            Foreground="White"
                            FontSize="19"
                            FontWeight="Medium"
                            FontFamily="Montserrat" Height="38"
                            Margin="0,10,0,0"
                            />





                    <TextBlock Text="Curp"
                            Foreground="LightGray"
                            FontSize="15"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            Margin="0,80,0,0" Height="25" RenderTransformOrigin="0.516,0.54">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <customcontrols:BindablePasswordBox
                     Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Height="43" Loaded="BindablePasswordBox_Loaded" 
                     />
                    <TextBlock
                         Foreground="LightGray"
                         FontSize="15"
                         FontWeight="Medium"
                         FontFamily="Montserrat"
                         Margin="0,10,0,0" Height="22"
                         ><Run Text="Contrase"/><Run Language="es-es" Text="ña"/></TextBlock>

                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="Red"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0 0 0 0"
                               TextWrapping="Wrap" Height="4" RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="-1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <customcontrols:BindablePasswordBox
                              Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                              Height="50" Loaded="BindablePasswordBox_Loaded" 
                              />
                    <Button x:Name="btnLogin"
                         Command="{Binding LoginCommand}"
                         BorderThickness="0"
                         Content="Sign Up "
                         Foreground="DarkGray"
                         FontSize="14"
                         FontFamily="Montserrat"
                         Cursor="Hand"
                         Click="btnLogin_Click"
                            Margin="0,16,0,0" Height="45">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#462AD8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="150" Height="40" CornerRadius="20"
                                 Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <TextBlock Text="{Binding ErrorMessage}"
                         Foreground="Red"
                         FontSize="12"
                         FontWeight="Medium"
                         FontFamily="Montserrat"
                         Margin="0 10 0 0"
                         TextWrapping="Wrap"/>

                </StackPanel>
                <StackPanel
                    Orientation="Vertical"
                    Margin="486,44,10,-328">
                    <Image Source="/Images/UAZlogo.png"
                        Width="150"
                        Height="236"
                           Margin="130,0,0,0"/>
                </StackPanel>
                <StackPanel
                    Orientation="Vertical"
                    Margin="96,50,558,-79">
                    <TextBlock Text="Nombre"
                        Foreground="LightGray"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        FontSize="15"
                        Height="20"/>
                    <TextBox x:Name="txtUser1"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                        FontFamily="Montserrat"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="White"
                        CaretBrush="LightGray"
                        BorderBrush="DarkGray"
                        BorderThickness="0,0,0,2"
                        Height="24"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="0,5,0,0"
                        Padding="20,0,0,0" Width="127" TextChanged="txtUser1_TextChanged">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user-icon.png"
                                Stretch="None"
                                AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>

                </StackPanel>

                <StackPanel
                    Orientation="Vertical"
                    Margin="380,50,263,-94"/>




                <StackPanel
                    Orientation="Vertical"
                    Margin="238,109,421,-162"/>



                <StackPanel
                    Orientation="Vertical"
                    Margin="96,109,576,-162"/>












                <StackPanel
                    
                    
                 
    Orientation="Vertical"
    Margin="44,385,44,-391">


                    <TextBlock 
        Background="White" RenderTransformOrigin="0.5,-4.057" Height="3"
        Margin="0,0,0,10"/>
                    <TextBlock Text="Contacto            Ubicación            Ayuda            Nuestra Institución            C 2025"
        Foreground="LightCyan"
        FontSize="16"
        FontWeight="Medium"
        FontFamily="Montserrat"
        TextWrapping="Wrap"
        TextAlignment="Center"
        Margin="0,5,0,50" Height="39" Width="709"/>


                </StackPanel>
                <StackPanel
                    Orientation="Vertical"
                    Margin="398,50,220,-79">
                    <TextBlock Text="Edad"
                        Foreground="LightGray"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        FontSize="15"
                        Height="20"/>
                    <TextBox x:Name="txtUser3"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                        FontFamily="Montserrat"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="White"
                        CaretBrush="LightGray"
                        BorderBrush="DarkGray"
                        BorderThickness="0,0,0,2"
                        Height="24"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="0,5,0,0"
                        Padding="20,0,0,0" Width="116" TextChanged="txtUser3_TextChanged">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user-icon.png"
                                Stretch="None"
                                AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>

                </StackPanel>
                <StackPanel
                    Orientation="Vertical"
                    Margin="257,50,400,-79">
                    <TextBlock Text="Apellido"
                        Foreground="LightGray"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        FontSize="15"
                        Height="20"/>
                    <TextBox x:Name="txtUser2"
                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                        FontFamily="Montserrat"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="White"
                        CaretBrush="LightGray"
                        BorderBrush="DarkGray"
                        BorderThickness="0,0,0,2"
                        Height="24"
                        VerticalContentAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="0,5,0,0"
                        Padding="20,0,0,0" Width="116" TextChanged="txtUser1_TextChanged">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user-icon.png"
                                Stretch="None"
                                AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>

                </StackPanel>





            </Grid>

        </Border>

    </Border>









</Window>
