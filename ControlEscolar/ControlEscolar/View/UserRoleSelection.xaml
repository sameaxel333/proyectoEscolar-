<Window x:Class="ProyectoEscolarizado.View.UserRoleSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bienvenido" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">


    <Border CornerRadius="12">
        <Border CornerRadius="10" BorderThickness="2" Opacity="0.98" Margin="0,14,0,-14">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2e2e2e" Offset="0"/>
                    <GradientStop Color="#dadada" Offset="0.75"/>
                    <GradientStop Color="#2e2e2e" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="1,1">
                    <GradientStop Color="#060521" Offset="0"/>
                    <GradientStop Color="LightBlue" Offset="0.75"/>
                    <GradientStop Color="#060521" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30">
                    </RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,-349">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Height="108" RenderTransformOrigin="0.5,0.5" Margin="0,140,0,0">
                        <StackPanel.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.06"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </StackPanel.RenderTransform>

                        <TextBlock Text="Bienvenido al Sistema de la Universidad Autónoma de Zacatecas"
                               TextAlignment="Center"
                               FontSize="18"
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               Foreground="#e8f6fe"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="Estudiante" Width="120" Height="40" Click="Estudiante_Click" Margin="5"/>
                            <Button Content="Maestro" Width="120" Height="40" Click="Maestro_Click"/>
                            <Button Content="Administrador" Width="120" Height="40" Click="Admin_Click"/>
                        </StackPanel>
                        <TextBlock Text="¿Qué eres?"
                               FontSize="16"
                               FontWeight="SemiBold"
                               />
                        <StackPanel
                        Orientation="Horizontal">
                            <Button
                        Width="120" Margin="5" Height="40" Content="Estudiante" Click="Estudiante_Click"/>
                            <Button
                        Width="120" Height="40" Content="Maestro" Click="Maestro_Click"/>
                            <Button
                        Width="120" Height="40" Content="Administrador" Click="Admin_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
