<Window x:Class="ControlEscolar.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlEscolar.View"
        xmlns:customcontrols ="clr-namespace:ControlEscolar.CustomControls"
        xmlns:ViewModel ="clr-namespace:ControlEscolar.ViewModel"
        mc:Ignorable="d"
        Title="LoginView" Height="450" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <ViewModel:LoginViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisivility"/>
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode='TwoWay'
              Converter="{StaticResource BooleanToVisivility}"/>
    </Window.Visibility>

    <Border CornerRadius="12">
        
        <Border CornerRadius="10" BorderThickness="2" Opacity="0.98" Margin="0,14,0,-14">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="1,1">
                    <GradientStop Color="#060521" Offset="0"/>
                    <GradientStop Color="LightBlue" Offset="0.75"/>
                    <GradientStop Color="AliceBlue" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30">
                    </RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button x:Name="btnMinimizar"
                     BorderThickness="0"
                     Content="-"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Monserrat"
                     Cursor="Hand"
                     Grid.Column="1"
                     Click="btnMinimizar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                                     Background="{TemplateBinding Background}" Margin="4,8,3,4">
                                    <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                </Border>

                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnCerrar"
                     BorderThickness="0"
                     Content="x"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Monserrat"
                     Cursor="Hand"
                     Grid.Column="2"
                     Click="btnCerrar_Click" Grid.ColumnSpan="2" Margin="2,0,2,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Red"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                         Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                      HorizontalAlignment="Center"/>
                                </Border>

                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </Grid>

                <StackPanel
                         Orientation="Vertical"
                         Margin="96,40,435,-376">
                    <TextBlock Text="Inicio de Sesión / Registrarme / Contáctanos "
                            Foreground="LightCyan"
                            FontSize="13"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            TextWrapping="Wrap"
                            TextAlignment="Left"
                            Margin="0,5,0,50" Height="14" Width="294"/>
                    
                    <TextBlock Text="Inicio de Sesión"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Medium"
                            FontFamily="Montserrat" Height="37"
                            />
                    <TextBlock Text="Curp"
                            Foreground="LightGray"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            FontSize="15"
                            Height="15"/>
                    <TextBox x:Name="txtUser"
                          Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                          FontFamily="Montserrat"
                          FontSize="13"
                          FontWeight="Medium"
                          Foreground="White"
                          CaretBrush="LightGray"
                          BorderBrush="DarkGray"
                          BorderThickness="0,0,0,2"
                          Height="28"
                          VerticalContentAlignment="Center"
                          Margin="0,5,0,0"
                          Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user-icon.png"
                                     Stretch="None"
                                     AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>
                    <TextBlock Text="Contraseña"
                            Foreground="LightGray"
                            FontSize="15"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            Margin="0,15,0,0"/>
                    <customcontrols:BindablePasswordBox
                     Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Height="46" Loaded="BindablePasswordBox_Loaded" 
                     />

                    <TextBlock Text="{Binding ErrorMessage}"
                            Foreground="Red"
                            FontSize="12"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            Margin="0 10 0 0"
                            TextWrapping="Wrap"/>
                    <Button x:Name="btnLogin"
                         Command="{Binding LoginCommand}"
                         BorderThickness="0"
                         Content="LOGIN"
                         Foreground="DarkGray"
                         FontSize="14"
                         FontFamily="Montserrat"
                         Cursor="Hand"
                         Margin="0 30 0 0" Click="btnLogin_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#462AD8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40" CornerRadius="20"
                                 Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
                <Image Margin="251,-10,-444,-859" Source="/logoUAZ_traslucido.png" Stretch="Fill"/>
                <StackPanel
                    Orientation="Vertical"
                    Margin="484,40,98,-324">
                    <Image Source="/Images/UAZlogo.png"
                        Width="217"
                        Height="344"/>
                </StackPanel>
                <Image Margin="417,-29,31,-153" Source="/nombre_institucion.png" Stretch="Fill"/>



            </Grid>

        </Border>

    </Border>
</Window>
