<Window x:Class="ControlEscolar.View.ContactViewMainMaestro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlEscolar.View"
        xmlns:customcontrols ="clr-namespace:ControlEscolar.CustomControls"
        xmlns:ViewModel ="clr-namespace:ControlEscolar.ViewModel"
        mc:Ignorable="d"
        Title="ContactViewMainMaestro" Height="450" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        Icon="/Resources/LogoAplicacionSomosUAZmini.ico">

    <Window.DataContext>
        <ViewModel:LoginViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisivility"/>
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode='TwoWay'
              Converter="{StaticResource BooleanToVisivility}"/>
    </Window.Visibility>

    <Border CornerRadius="12">

        <Border CornerRadius="10" BorderThickness="2" Opacity="0.98" Margin="0,14,0,-14">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2e2e2e" Offset="0"/>
                    <GradientStop Color="#dadada" Offset="0.75"/>
                    <GradientStop Color="#2e2e2e" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="1,1">
                    <GradientStop Color="#060521" Offset="0"/>
                    <GradientStop Color="LightBlue" Offset="0.75"/>
                    <GradientStop Color="#060521" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30">
                    </RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnMinimizar"
                     BorderThickness="0"
                     Content="-"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Monserrat"
                     Cursor="Hand"
                     Grid.Column="1"
                     Click="btnMinimizar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                                     Background="{TemplateBinding Background}" Margin="4,8,3,4">
                                    <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                </Border>

                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnCerrar"
                     BorderThickness="0"
                     Content="x"
                     Foreground="White"
                     FontSize="16"
                     FontFamily="Monserrat"
                     Cursor="Hand"
                     Grid.Column="2"
                     Click="btnCerrar_Click" Grid.ColumnSpan="2" Margin="2,0,2,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Red"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9"
                         Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                      HorizontalAlignment="Center"/>
                                </Border>

                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="← Regresar"
HorizontalAlignment="Left"
Margin="656,35,0,-32"
Width="110"
Height="NaN"
Click="BackButton1_Click"
FontSize="16"
FontWeight="Bold"
Foreground="White" Grid.ColumnSpan="2">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                        CornerRadius="8"
                        BorderBrush="White"
                        BorderThickness="2">
                                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Background" Value="#005A9C"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Width" Value="120"/>
                                <Setter Property="Height" Value="40"/>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#007ACC"/>
                                        <!-- Azul más claro -->
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <StackPanel
                         Orientation="Vertical"
                         Margin="56,40,378,-376">
                    <TextBlock Text="CONTACTO"
                            Foreground="White"
                            FontSize="40"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            TextWrapping="Wrap"
                            TextAlignment="Left"
                            Margin="-150,0,0,50" Height="44" Width="217"/>
                    <TextBlock Text="✆  Teléfono                                  ✉ Email"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Medium"
                            FontFamily="Montserrat" Height="20"
                            />
                    <TextBlock Text="+4921231232                                contacto@uaz.edu.mx"
                         Foreground="LightGray"
                         FontSize="14"
                         FontWeight="Medium"
                         FontFamily="Montserrat" Height="20"
                         />
                    <TextBlock Text="+4921231233"
                         Foreground="LightGray"
                         FontSize="14"
                         FontWeight="Medium"
                         FontFamily="Montserrat" Height="20"
                         />


                    <TextBlock Text="{Binding ErrorMessage}"
                            Foreground="Red"
                            FontSize="12"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            Margin="0 10 0 0"
                            TextWrapping="Wrap"/>
                    <TextBlock Text="Dirección"
                            Foreground="White"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            FontSize="15"
                            Height="23"/>
                    <TextBlock Text="Campus Siglo XXI: Villanueva - Zacatecas, La Escondida, 98160 Zacatecas, Zac."
                        Foreground="LightGray"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        FontSize="15"
                        Height="59" RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="-17.418"/>
                                <RotateTransform/>
                                <TranslateTransform X="-2.353"/>
                            </TransformGroup>
                        </TextBlock.RenderTransform>
                    </TextBlock>

                </StackPanel>
                <StackPanel
                    Orientation="Vertical"
                    Margin="434,88,0,-271">
                    <TextBlock Text="Ponte En Contacto :"
                        Foreground="#05396b"
                        FontSize="25"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        TextWrapping="Wrap"
                        TextAlignment="Left"
                        Height="44" Width="318"/>
                    <TextBox x:Name="txtUser"
                      Text="Nombre*"
                      FontFamily="Montserrat"
                      FontSize="13"
                      FontWeight="Medium"
                      Foreground="LightGray"
                      CaretBrush="LightGray"
                      BorderBrush="DarkGray"
                      BorderThickness="0,0,0,2"
                      Height="28"
                      VerticalContentAlignment="Center"
                      Padding="20,0,0,0" Width="318"/>
                    <TextBox x:Name="txtEmail"
                        Text="Email*"
                        FontFamily="Montserrat"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="LightGray"
                        CaretBrush="LightGray"
                        BorderBrush="DarkGray"
                        BorderThickness="0,0,0,2"
                        Height="28"
                        VerticalContentAlignment="Center"
                        Margin="0,5,0,0"
                        Padding="20,0,0,0" Width="320"/>
                    <TextBox x:Name="txtAsunto"
                        Text="Asunto*"
                        FontFamily="Montserrat"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="LightGray"
                        CaretBrush="LightGray"
                        BorderBrush="DarkGray"
                        BorderThickness="0,0,0,2"
                        Height="28"
                        VerticalContentAlignment="Center"
                        Margin="0,5,0,0"
                        Padding="20,0,0,0" Width="322"/>
                    <Button x:Name="btnEnviar"
                        Command="{Binding LoginCommand}"
                        BorderThickness="0"
                        Content="ENVIAR"
                        Foreground="DarkGray"
                        FontSize="14"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Margin="0 30 0 0" Click="btnEnviar_Click">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#003757"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Width="150" Height="40" CornerRadius="20"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                     HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>

            </Grid>

        </Border>

    </Border>
</Window>
