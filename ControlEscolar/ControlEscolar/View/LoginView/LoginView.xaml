<Window x:Class="ControlEscolar.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlEscolar.View"
        xmlns:customcontrols ="clr-namespace:ControlEscolar.CustomControls"
        xmlns:ViewModel ="clr-namespace:ControlEscolar.ViewModel"
        mc:Ignorable="d"
        Title="LoginView" Height="450" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        Icon="/Resources/LogoAplicacionSomosUAZmini.ico">

    <Window.DataContext>
        <ViewModel:LoginViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisivility"/>
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode='TwoWay'
              Converter="{StaticResource BooleanToVisivility}"/>
    </Window.Visibility>

    <Border CornerRadius="12">

        <Border CornerRadius="10" BorderThickness="2" Opacity="0.98" Margin="0,14,0,-14">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2e2e2e" Offset="0"/>
                    <GradientStop Color="#dadada" Offset="0.75"/>
                    <GradientStop Color="#2e2e2e" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="1,1">
                    <GradientStop Color="#060521" Offset="0"/>
                    <GradientStop Color="LightBlue" Offset="0.75"/>
                    <GradientStop Color="#060521" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30">
                    </RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Image Margin="242,67,-328,-859" Source="/images/logoUAZ_traslucido.png" Stretch="Fill" Grid.ColumnSpan="4"/>
                    <Image Margin="411,10,5,-213" Source="/images/nombre_institucion.png" Stretch="Fill" Grid.ColumnSpan="3"/>
                    <!-- Botón Minimizar -->
                    <Button x:Name="btnMinimizar"
        Click="btnMinimizar_Click"
        ToolTip="Minimizar"
        Cursor="Hand"
        Width="28" Height="28"
        Background="Transparent"
        BorderThickness="0"
        Margin="738,0,0,2" Grid.ColumnSpan="2">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                    Width="28" Height="28"
                    x:Name="border">
                                    <TextBlock Text="―"
                           FontSize="14"
                           Foreground="Black"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#DDDDDD"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Botón Cerrar -->
                    <Button x:Name="btnCerrar"
        Click="btnCerrar_Click"
        ToolTip="Cerrar"
        Cursor="Hand"
        Width="28" Height="28"
        Background="Transparent"
        BorderThickness="0"
        Margin="0,0,2,2" Grid.Column="2" Grid.ColumnSpan="2">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                    Width="28" Height="28"
                    x:Name="border">
                                    <TextBlock Text="×"
                           FontSize="14"
                           Foreground="Black"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FFCDD2"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="← Regresar"
        HorizontalAlignment="Left"
        Margin="656,35,0,-32"
        Width="110"
        Height="NaN"
        Click="BackButton_Click"
        FontSize="16"
        FontWeight="Bold"
        Foreground="White" Grid.ColumnSpan="2">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="White"
                                BorderThickness="2">
                                                <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Background" Value="#005A9C"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Width" Value="120"/>
                                <Setter Property="Height" Value="40"/>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#007ACC"/>
                                        <!-- Azul más claro -->
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>



                </Grid>

                <StackPanel
                         Orientation="Vertical"
                         Margin="96,40,435,-376">
                    <TextBlock Foreground="LightCyan"
                        FontSize="13"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        TextWrapping="Wrap"
                        TextAlignment="Left"
                        Margin="0,5,0,50" Height="14" Width="294">
                        <Run Text="Inicio de Sesión / "/> <!-- Texto estático -->
                        <Hyperlink Click="AbrirSignUpView">Registrarme</Hyperlink> /
                        <Hyperlink Click="AbrirContactView">Contáctanos</Hyperlink>
                    </TextBlock>


                    <TextBlock Text="Inicio de Sesión"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Medium"
                            FontFamily="Montserrat" Height="37"
                            />
                    <TextBlock Text="Curp"
                            Foreground="LightGray"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            FontSize="15"
                            Height="15"/>
                    <TextBox x:Name="txtUser"
                          Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                          FontFamily="Montserrat"
                          FontSize="13"
                          FontWeight="Medium"
                          Foreground="White"
                          CaretBrush="LightGray"
                          BorderBrush="DarkGray"
                          BorderThickness="0,0,0,2"
                          Height="28"
                          VerticalContentAlignment="Center"
                          Margin="0,5,0,0"
                          Padding="20,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user-icon.png"
                                     Stretch="None"
                                     AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>
                    <TextBlock Text="Contraseña"
                            Foreground="LightGray"
                            FontSize="15"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            Margin="0,15,0,0"/>
                    <customcontrols:BindablePasswordBox
                     Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                     Height="46" Loaded="BindablePasswordBox_Loaded" 
                     />

                    <TextBlock Text="{Binding ErrorMessage}"
                            Foreground="Red"
                            FontSize="12"
                            FontWeight="Medium"
                            FontFamily="Montserrat"
                            Margin="0 10 0 0"
                            TextWrapping="Wrap"/>
                    <Button x:Name="btnLogin"
                         Command="{Binding LoginCommand}"
                         BorderThickness="0"
                         Content="LOGIN"
                         Foreground="DarkGray"
                         FontSize="14"
                         FontFamily="Montserrat"
                         Cursor="Hand"
                         Margin="0 30 0 0" Click="btnLogin_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#003757"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40" CornerRadius="20"
                                 Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>

                <StackPanel
                    Orientation="Vertical"
                    Margin="484,40,98,-324">
                    <Image Source="/Images/UAZlogo.png"
                        Width="217"
                        Height="421"/>
                </StackPanel>




            </Grid>

        </Border>

    </Border>
</Window>
