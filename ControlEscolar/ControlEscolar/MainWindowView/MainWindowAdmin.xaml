<Window x:Class="ControlEscolar.MainWindowAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlEscolar"
        mc:Ignorable="d"
        Title="MainWindowAdmin" Height="450" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.Resources>
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="LightCyan"/>
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12">
        <Border CornerRadius="10" BorderThickness="2" Opacity="0.98">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#bcbcbc" Offset="0"/>
                    <GradientStop Color="#282828" Offset="0.75"/>
                    <GradientStop Color="#e6e6e6" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="1,1">
                    <GradientStop Color="#060521" Offset="0"/>
                    <GradientStop Color="LightBlue" Offset="0.75"/>
                    <GradientStop Color="#060521" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <Image Margin="-27,72,-59,-864" Source="/images/logoUAZblanco.png" Stretch="Fill" Grid.ColumnSpan="2"/>
                    <!-- Botón Minimizar -->
                    <Button x:Name="btnMinimizar"
                            Click="btnMinimizar_Click"
                            ToolTip="Minimizar"
                            Cursor="Hand"
                            Width="28" Height="28"
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="738,0,0,2" Grid.ColumnSpan="2">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        Width="28" Height="28"
                                        x:Name="border">
                                    <TextBlock Text="―"
                                               FontSize="14"
                                               Foreground="Black"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#DDDDDD"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Botón Cerrar -->
                    <Button x:Name="btnCerrar"
                            Click="btnCerrar_Click"
                            ToolTip="Cerrar"
                            Cursor="Hand"
                            Width="28" Height="28"
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="0,0,2,2" Grid.Column="2" Grid.ColumnSpan="2">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        Width="28" Height="28"
                                        x:Name="border">
                                    <TextBlock Text="×"
                                               FontSize="14"
                                               Foreground="Black"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#FFCDD2"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <StackPanel Orientation="Vertical" Margin="10,15,541,-70">
                    <Image Source="/Images/UAZe2logo.png"
                           Width="217"
                           Height="61"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="260,39,38,-322">
                    <TextBlock Foreground="LightCyan"
                               FontSize="16"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               TextWrapping="Wrap"
                               TextAlignment="Right"
                               Height="21" 
                               Width="484" 
                               RenderTransformOrigin="0.5,0.495">
                        <Hyperlink Click="ValidarMaestro_Click">
                            <Run Text="Maestros"/>
                        </Hyperlink>
                        <Run Text="    "/>
                        <Hyperlink Click="ValidarAlumno_Click">
                            <Run Text="Alumnos"/>
                        </Hyperlink>
                        <Run Text="    "/>
                        <Hyperlink Click="GestionCurso_Click">
                            <Run Text="Cursos"/>
                        </Hyperlink>
                        <Run Text="    "/>
                        <Hyperlink Click="CerrarSesion_Click">
                            <Run Text="Cerrar Sesion"/>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="44,100,44,-406">
                    <TextBlock x:Name="txtBienvenida"
                               Foreground="White"
                               FontSize="30"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Height="106" 
                               Width="704">
                        <Run Text="Bienvenido Adiministrador/a, "/>
                        <Run Text="{Binding Name}" Foreground="#426977"/>

                    </TextBlock>

                    <TextBlock Foreground="White"
                               FontSize="16"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               TextWrapping="Wrap"
                               TextAlignment="Left"
                               Margin="0,5,0,50" 
                               Height="127" 
                               Width="704">
                            <Run Text="Tu Información General :"/>
                            <LineBreak/>
                            <Run Text="CURP: " />
                            <Run Text="{Binding CURP}" Foreground="#426977" />
                            <LineBreak/>
                            <Run Text="Edad: " />
                            <Run Text="{Binding Edad}" Foreground="#426977" />

                    </TextBlock>
                    <TextBlock Background="White" 
                               RenderTransformOrigin="0.5,-4.057" 
                               Height="3"
                               Margin="0,0,0,10"/>

                    <TextBlock Foreground="LightCyan"
                        FontSize="16"
                        FontWeight="Medium"
                        FontFamily="Montserrat"
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        Margin="0,5,0,50" Height="39" Width="709">
                        <TextBlock>
                            <Hyperlink Click="ContactClick">
                                <Run Text="Contacto"/>
                            </Hyperlink>
                            <Run Text=" "/>
                            <Hyperlink Click="UbicacionClick">
                                <Run Text="Ubicación"/>
                            </Hyperlink>
                            <Run Text=" "/>
                            <Hyperlink Click="PlanEstudiosClick">
                                <Run Text="Plan de Estudios"/>
                            </Hyperlink>
                            <Run Text=" "/>
                            <Hyperlink Click="InstitucionClick">
                                <Run Text="Nuestra Institución"/>
                            </Hyperlink>
                        
                            <Run Text=" "/>
                            <Run Text="© 2025"/>
                        </TextBlock>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>